#1부터 1000까지의 3의 배수의 합 구하기
#case1
result = 0
num = 1

while num<=1000:
  if num%3==0:
    result += num
  num += 1
print(result)

#case2
result = 0
num = 1

while True:
  if num%3==0:
    result += num
  if num == 1000:
    break
  num += 1
print(result)

#case3
result = 0
num = 1

while num<=1000:
  num += 1
  if num%3!=0:
    continue
  result+=num
print(result)

#for문 사용 case4
result = 0
num = 1
for num in range(1, 1001):
  if num%3==0:
    result+=num
print(result)
